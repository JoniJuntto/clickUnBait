{
  "manifest_version": 3,
  "name": "Clickbait Translator",
  "version": "1.0",
  "description": "Translates clickbait titles on IS.fi and Ilta-Sanomat.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://www.is.fi/*",
    "https://www.iltasanomat.fi/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
